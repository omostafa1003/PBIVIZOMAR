{
  "privileges": [],
  "dataRoles": [
    {
      "displayName": "Search Field",
      "name": "searchField",
      "kind": "Grouping",
      "preferredTypes": [
        { "text": true }
      ]
    },
    {
      "displayName": "Search Query",
      "name": "searchQuery",
      "kind": "Measure",
      "preferredTypes": [ { "text": true } ]
    }
  ],
  "dataViewMappings": [
    {
      "conditions": [
        { "searchField": { "max": 1, "min": 1 }, "searchQuery": { "max": 1, "min": 0 } }
      ],
      "categorical": {
        "categories": {
          "for": { "in": "searchField" },
          "dataReductionAlgorithm": { "window": { "count": 1 } }
        },
        "values": {
          "select": [ { "bind": { "to": "searchQuery" } } ]
        }
      }
    }
  ],
  "objects": {
    "general": {
      "displayName": "General",
      "properties": {
        "filter": {
          "type": { "filter": true }
        }
      }
    },
    "search": {
      "displayName": "Search",
      "properties": {
        "placeholder": {
          "displayName": "Placeholder",
          "type": { "text": true }
        }
      }
    },
    "display": {
      "displayName": "Display",
      "properties": {
        "showFilterJson": {
          "displayName": "Show Applied Filter JSON",
          "type": { "bool": true }
        },
        "showLog": {
          "displayName": "Show Log",
          "type": { "bool": true }
        }
      }
    },
    "limits": {
      "displayName": "Limits",
      "properties": {
        "allowMeasureChip": {
          "displayName": "Show measure chip",
          "type": { "bool": true }
        },
        "maxQueryLength": {
          "displayName": "Max query length (chars)",
          "type": { "numeric": true }
        },
        "maxTokens": {
          "displayName": "Max tokens",
          "type": { "numeric": true }
        },
        "maxClauses": {
          "displayName": "Max conditions",
          "type": { "numeric": true }
        }
      }
    }
  }
}
